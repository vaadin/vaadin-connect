{
  "compilerOptions": {
    "outDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "module": "es6",
    "target": "es2017",
    "moduleResolution": "node",
    "strict": false,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
