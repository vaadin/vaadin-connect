{
  "coverage": [
    "index.js",
    "src/**/*.js"
  ],
  "suites": "test/**/*.spec.js",
  "environments": ["node"],
  "browser": {
    "loader": {"script": "esm"}
  },
  "node": {
    "plugins": "@babel/register/lib/node.js",
    "reporters+": ["lcov", "htmlcoverage"]
  },
  "instrumenterOptions": {
    "esModules": true
  }
}
